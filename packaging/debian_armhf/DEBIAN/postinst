#!/bin/sh

set -e

enable() {
  wanted_by=$(cat /lib/systemd/system/${1} | sed -n -e 's/^.*WantedBy=//p')
  mkdir -p /etc/systemd/system/${wanted_by}.wants
  ln -sf \
    "/lib/systemd/system/${1}" \
    "/etc/systemd/system/${wanted_by}.wants/${1}"
}

case "$1" in

  configure)
    if [ -f /etc/init/bondster-bco.conf ] ; then
      enable bondster-bco.path
      enable bondster-bco.service
      enable bondster-bco-rest.service
      (systemctl daemon-reload >/dev/null 2>&1 || :)
      (systemctl start bondster-bco.service >/dev/null 2>&1 || :)
      (systemctl start bondster-bco-rest.service >/dev/null 2>&1 || :)
      (systemctl start bondster-bco.path >/dev/null 2>&1 || :)
    else
      (>&2 echo "/etc/init/bondster-bco.conf file not found")
      exit 1
    fi
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
  ;;

  *)
    (>&2 echo "postinst called with unknown argument \ `$1`")
    exit 1
  ;;

esac

exit 0
